<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <TextView
      android:layout_width="150dp"
      android:layout_height="wrap_content"
      android:textSize="16dp"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="7dp"
      android:text="工银工业4.0股票"
      android:id="@+id/money_item_sname"
      android:textStyle="bold"
      android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="001649"
        android:layout_marginTop="8dp"
        android:textSize="18dp"
        android:id="@+id/money_symbol"
        android:layout_alignLeft="@id/money_item_sname"
        android:layout_below="@id/money_item_sname"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_alignTop="@id/money_item_sname"
        android:textSize="17dp"
        android:text="1.3480"
        android:id="@+id/money_per_nav"
        android:textStyle="bold"
        android:textColor="@color/black"
       android:layout_toRightOf="@id/money_item_sname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="状态：暂停"
        android:textColor="@color/gold_red"
        android:id="@+id/money_sg_states"
        android:layout_alignLeft="@id/money_per_nav"
       android:layout_alignTop="@id/money_symbol"
        android:layout_below="@id/money_per_nav"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="40dp"

        android:layout_marginTop="12dp"
        android:id="@+id/money_nav_a"
        android:text="-0.004"
        android:background="@color/gold_red"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"/>
    <LinearLayout
        android:id="@+id/line_money_item"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:background="@color/grey"
        android:layout_marginTop="90dp">

    </LinearLayout>

</RelativeLayout>
