<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Re_original">
    <RelativeLayout
        android:id="@+id/parallaxContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:id="@+id/image"

            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="Image of a cat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold"
            android:textSize="27sp"
            android:layout_marginLeft="20dp"
            android:paddingLeft="20dp"
            android:id="@+id/name"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFFFF"
        android:text="+"
        android:textSize="24sp"
        android:id="@+id/more"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp" />
    <Button
        android:layout_width="6dp"
        android:layout_height="90dp"
       android:layout_marginLeft="50dp"
        android:layout_marginBottom="100dp"
        android:id="@+id/news_title_button"
        android:background="@color/blue_list_item"
      android:layout_alignParentBottom="true"/>
     <TextView
         android:layout_width="280dp"
         android:layout_height="wrap_content"
         android:id="@+id/news_neirong"
         android:textColor="@color/write"
         android:layout_alignTop="@id/news_title_button"
         android:layout_marginLeft="25dp"
         android:textSize="30dp"
         android:textStyle="bold"
         android:layout_toRightOf="@id/news_title_button"/>

</RelativeLayout>
