<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tianqi_chun"
    android:id="@+id/background_tianqi">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/genxing"
        android:id="@+id/tianqi_genxin"
        android:layout_alignParentRight="true"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="100dp"
    android:id="@+id/wendu_text"
    android:textColor="@color/write"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="130dp"
    android:text="12"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/wendu_text"
        android:layout_marginTop="90dp"
        android:textSize="18dp"
        android:id="@+id/tianqi_city"
        android:layout_marginLeft="20dp"
        android:text="株洲"
        android:textColor="@color/write"
        android:layout_toRightOf="@id/wendu_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="°C"
        android:textSize="30dp"
        android:textColor="@color/write"
        android:layout_marginTop="24dp"
        android:layout_alignTop="@id/wendu_text"
        android:layout_toRightOf="@+id/wendu_text"/>
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@id/wendu_text"
         android:textColor="@color/write"
         android:layout_marginLeft="60dp"
         android:textSize="21dp"
         android:layout_marginTop="10dp"
         android:id="@+id/text"
         android:text="天气"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignStart="@id/text"
          android:text="晴"
          android:textSize="21dp"
          android:id="@+id/tianti_today"
          android:textColor="@color/write"
          android:layout_below="@id/text"
          android:layout_marginLeft="12dp"
          android:layout_alignLeft="@id/text" />
       <LinearLayout
           android:layout_width="1dp"
           android:layout_height="50dp"
           android:layout_alignTop="@id/text"
           android:layout_marginLeft="30dp"
           android:background="@color/write"
           android:id="@+id/line"
           android:orientation="horizontal"
          android:layout_toRightOf="@id/text"></LinearLayout>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="洗车指数"
           android:textSize="21dp"
           android:textColor="@color/write"
           android:layout_alignTop="@id/text"
           android:layout_marginLeft="20dp"
           android:id="@+id/text2"
           android:layout_toRightOf="@id/line"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text2"
            android:layout_alignStart="@id/text2"
            android:textSize="21dp"
            android:id="@+id/tianqi_car"
            android:textColor="@color/write"
            android:text="适宜洗车"
            android:layout_alignLeft="@id/text2" />
         <LinearLayout
             android:layout_width="1dp"
             android:layout_height="50dp"
             android:layout_toRightOf="@id/text2"
             android:layout_marginLeft="20dp"
             android:background="@color/write"
             android:orientation="horizontal"
             android:id="@+id/line1"
             android:layout_alignTop="@id/text2"></LinearLayout>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="20dp"
           android:layout_alignTop="@id/text2"
           android:text="户外活动"
           android:textSize="21dp"
           android:textColor="@color/write"
           android:id="@+id/text3"
           android:layout_toRightOf="@id/line1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/text3"
            android:layout_below="@id/text3"
            android:textSize="21dp"
            android:text="比较适宜"
            android:id="@+id/tianqi_cx"
            android:textColor="@color/write"
            android:layout_alignLeft="@id/text3" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="21dp"
        android:id="@+id/re_day_1"
        android:layout_below="@id/tianti_today"
       >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentLeft="true"
            android:text="周一"
            android:layout_marginLeft="4dp"
            android:textColor="@color/write"
            android:id="@+id/tianqi_day_1"
           />
          <ImageView
              android:layout_centerHorizontal="true"
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:background="@drawable/baoxun"
              android:layout_marginTop="1dp"
              android:id="@+id/img_day_1"
              android:layout_marginLeft="3dp"

              android:layout_below="@id/tianqi_day_1"
            />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="8°-18°"
               android:id="@+id/wendu_day_1"
               android:textColor="@color/write"

               android:layout_below="@id/img_day_1"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="35dp"
        android:id="@+id/re_day_2"
        android:layout_toRightOf="@id/re_day_1"
        android:layout_below="@id/tianti_today"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentLeft="true"
            android:text="周二"
            android:layout_marginLeft="4dp"
            android:textColor="@color/write"
            android:id="@+id/tianqi_day_2"
            />
        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/baoxun"
            android:layout_marginTop="1dp"
            android:id="@+id/img_day_2"
            android:layout_marginLeft="3dp"

            android:layout_below="@id/tianqi_day_2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8°-18°"
            android:id="@+id/wendu_day_2"
            android:textColor="@color/write"

            android:layout_below="@id/img_day_2"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="35dp"
        android:id="@+id/re_day_3"
        android:layout_toRightOf="@id/re_day_2"
        android:layout_below="@id/tianti_today"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentLeft="true"
            android:text="周三"
            android:layout_marginLeft="4dp"
            android:textColor="@color/write"
            android:id="@+id/tianqi_day_3"
            />
        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/baoxun"
            android:layout_marginTop="1dp"
            android:id="@+id/img_day_3"
            android:layout_marginLeft="3dp"

            android:layout_below="@id/tianqi_day_3"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8°-18°"
            android:id="@+id/wendu_day_3"
            android:textColor="@color/write"

            android:layout_below="@id/img_day_3"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="35dp"
        android:id="@+id/re_day_4"
        android:layout_toRightOf="@id/re_day_3"
        android:layout_below="@id/tianti_today"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentLeft="true"
            android:text="周四"
            android:layout_marginLeft="4dp"
            android:textColor="@color/write"
            android:id="@+id/tianqi_day_4"
            />
        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/baoxun"
            android:layout_marginTop="1dp"
            android:id="@+id/img_day_4"
            android:layout_marginLeft="3dp"

            android:layout_below="@id/tianqi_day_4"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8°-18°"
            android:id="@+id/wendu_day_4"
            android:textColor="@color/write"

            android:layout_below="@id/img_day_4"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="35dp"
        android:id="@+id/re_day_5"
        android:layout_toRightOf="@id/re_day_4"
        android:layout_below="@id/tianti_today"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentLeft="true"
            android:text="周五"
            android:layout_marginLeft="4dp"
            android:textColor="@color/write"
            android:id="@+id/tianqi_day_5"
            />
        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/baoxun"
            android:layout_marginTop="1dp"
            android:id="@+id/img_day_5"
            android:layout_marginLeft="3dp"

            android:layout_below="@id/tianqi_day_5"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8°-18°"
            android:id="@+id/wendu_day_5"
            android:textColor="@color/write"

            android:layout_below="@id/img_day_5"/>
    </RelativeLayout>

</RelativeLayout>
