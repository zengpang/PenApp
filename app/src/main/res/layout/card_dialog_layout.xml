<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="身份证信息查询结果"
        android:textStyle="bold"

        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="23dp"
        android:id="@+id/text"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/card_dizhi_text"


        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text"/>

    <TextView
        android:id="@+id/card_sex_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_dizhi_text"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/card_sex_text"
        android:id="@+id/card_brithday_text"/>

    <TextView
        android:id="@+id/dialog_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="50dp"
        android:text="退出"
        android:layout_below="@id/card_brithday_text"
        android:textSize="20dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/dialog_close"
        android:layout_marginRight="20dp"
        android:text="确定"
        android:textSize="20dp"
        android:id="@+id/dialog_qd"
        android:textColor="@color/colorAccent"
        android:layout_toLeftOf="@id/dialog_close"/>

</RelativeLayout>
