<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
 <ImageView
     android:layout_width="20dp"
     android:layout_height="20dp"
     android:layout_marginTop="20dp"
     android:layout_marginLeft="10dp"
     android:id="@+id/item_bofang"
     android:src="@drawable/item_bofang"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_toRightOf="@id/item_bofang"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="7dp"
        android:id="@+id/item_title"
        android:text="要去公教楼考试"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_below="@id/item_title"
        android:text="2018/12/25"
        android:id="@+id/item_time"
        android:layout_alignLeft="@id/item_title"/>
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="(学习)"
         android:layout_alignTop="@id/item_time"
         android:layout_marginLeft="5dp"
         android:layout_toRightOf="@id/item_time"
         android:id="@+id/item_biaoqian"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_alignParentEnd="true"
        android:text="00:15:44"
        android:layout_marginTop="13dp"
        android:textStyle="bold"
        android:id="@+id/item_clock"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:background="@color/grey"
        android:layout_below="@id/item_bofang">


    </LinearLayout>
</RelativeLayout>
